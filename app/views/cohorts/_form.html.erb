<%= form_for [@course, @cohort] do |f| %>

    <div class="row inner-row" align="center">
        <div class="col-md-12">
            <h5 class="card_headline">
                New Cohort for:
            </h5>
            <h4 class="card_headline">
                <%=@course.name%>
            </h4>


            <h5 class="card_headline">
                <%= f.label :start %>

            </h5>
            <div>
                <%= f.date_field :start%>
            </div>

            <h5 class="card_headline">
                <%= f.label :end %>
            </h5>
            <div>
                <%= f.date_field :end %>
            </div>

            <div>
                <h5 class="card_headline">
                    Instructor:
                </h5>
            </div>
            <div>
                <select name="instructorSelect">
                    <% Instructor.all.each do |instructor| %>
                        <option value="<%= instructor.id %>">
                            <%= instructor.l_name %>
                        </option>
                        <% end %>

                </select>
            </div>
            <br>
                <%= f.hidden_field :course_id, value: params[:course_id] %>
                <%= f.hidden_field :name, value: @course.name%>
            <div>
                <%= f.submit %>
            </div>
        </div>
    </div>


    <% end %>