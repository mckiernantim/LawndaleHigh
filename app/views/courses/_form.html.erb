<%= form_for @course do |f| %>

    <div class="middle-row">
        <div class="row inner-row form" align="center">

            <div class="col-md-12">
              
                <h5 class="card_headline">


                    <%= f.label :Course_name %>
                        <%= f.text_field :name %>
                </h5>
                <br>
                <h5 class="card_headline">
                    <%= f.label :Credit_hours %>
                        <%= f.number_field :hours%>
                </h5>
                <br>

                <div>
                    <%= f.submit %>
                </div>

            </div>
        </div>
    </div>
    <% end %>